@model Cart

@if (Model?.Selections?.Count() > 0)
{
    <div>
        <div class="text-light ms-1">
            @Model.Selections.Count()
            ($@(Model.Selections.Sum(e => e.Quantity * e.Product.RetailPrice).ToString("f0")))
        </div>
        <a asp-action="Index" asp-controller="Cart" class="btn btn-sm">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 16 16" fill="none">
