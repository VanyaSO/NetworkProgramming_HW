<div class="container mb-3 p-0">
    <div class="row">
        <div class="col-4 d-flex flex-column justify-content-end">
            <div class="d-flex">
                <label class="form-label fw-bold me-2 my-0">Сортировать по: </label>
                <select form="pageform" name="options.OrderPropertyName" class="form-select w-auto border-0" onchange="document.getElementById('pageform').submit();" style="padding: 0 32px 0 0; cursor: pointer">
                    @foreach (string s in ViewBag.sorts as string[])
                    {
                    <option value="@s" selected="@(Model.Options.OrderPropertyName == s)">
                        @(s.IndexOf('.') == -1 ? s : s.Substring(0, s.IndexOf('.')))
                    </option>
                    }
                </select>
            </div>
            <div class="mt-2">
                <span class="fw-bold me-2">Порядок сортировки: </span>
                <input form="pageform" type="checkbox" name="Options.DescendingOrder" id="Options.DescendingOrder" class="form-check-input"
                       value="true" checked="@Model.Options.DescendingOrder" onchange="document.getElementById('pageform').submit();"/>
                <label class="form-check-label" for="Options.DescendingOrder">По убыванию</label>
            </div>
        </div>
        <div class="col-5">
            <label class="form-label fw-bold mb-1">Поиск</label>
            <div class="input-group">
                <select form="pageform" name="options.searchpropertyname" class="form-select" style="width: 25%">
                    @foreach (string s in ViewBag.searches as string[])
                    {
                        <option value="@s" selected="@(Model.Options.SearchPropertyName == s)">
                            @(s.IndexOf('.') == -1 ? s : s.Substring(0, s.IndexOf('.')))
                        </option>
                    }
                </select>
                <input form="pageform" class="form-control" style="width: 65%" name="options.searchterm" value="@Model.Options.SearchTerm" placeholder="Введите значение для поиска" />
                <button form="pageform" class="btn btn-primary w-auto p-2" type="submit" style="width: 10%">
                    <svg xmlns="http://www.w3.org/2000/svg" width="18" height="18" viewBox="0 0 16 16" fill="none">
                        <path fill-rule="evenodd" clip-rule="evenodd" d="M6.5 12C9.53757 12 12 9.53757 12 6.5C12 3.46243 9.53757 1 6.5 1C3.46243 1 1 3.46243 1 6.5C1 9.53757 3.46243 12 6.5 12ZM13 6.5C13 10.0899 10.0899 13 6.5 13C2.91015 13 0 10.0899 0 6.5C0 2.91015 2.91015 0 6.5 0C10.0899 0 13 2.91015 13 6.5Z" fill="white"/>
                        <path d="M10.3439 11.7422C10.3734 11.7822 10.4062 11.8204 10.4424 11.8566L14.2929 15.7071C14.6834 16.0976 15.3166 16.0976 15.7071 15.7071C16.0976 15.3166 16.0976 14.6834 15.7071 14.2929L11.8566 10.4424C11.8204 10.4062 11.7822 10.3734 11.7422 10.3439C11.3499 10.878 10.878 11.3499 10.3439 11.7422Z" fill="white"/>
                    </svg>
                </button>
            </div>
        </div>
    </div>
</div>
